<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="12dp"
    app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_thing_img_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">
                <ImageView
                    android:id="@+id/card_view_thing_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    tools:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/card_view_thing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/card_view_thing_img_container"
                android:layout_alignTop="@id/card_view_thing_img_container"
                tools:text="The title about what you want to do."
                android:textColor="#222222"/>

            <TextView
                android:id="@+id/card_view_thing_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/card_view_thing_img_container"
                android:layout_below="@id/card_view_thing_title"
                tools:text="The title about what you want to do."
                android:textColor="#888888"
                />

        </RelativeLayout>


</androidx.cardview.widget.CardView>